#!/usr/bin/env bash

# your mail address
MAILTO=webmaster@example.com

# check php version
PHPVERSION=$(curl -s https://www.php.net/downloads.php | grep "Current Stable" -A1 | grep PHP | cut -d" " -f6)
LASTVERSION=$(ls -1d /opt/php-* | tail -n1)
CURRENTPHP=$($LASTVERSION/bin/php -v | grep PHP | head -n1 | cut -d" " -f2)

# check if a new php version is available. WARNING if yes.
if [ $PHPVERSION != $CURRENTPHP ]; then
	echo "Neue PHP Version $PHPVERSION verfügbar ($CURRENTPHP) !" | mail -s "Neue PHP Version $PHPVERSION für $HOSTNAME" "$MAILTO"
	exit 1
fi
